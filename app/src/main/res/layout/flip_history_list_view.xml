<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/childImage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#9B12002B">

    <ImageView
        android:id="@+id/CoinImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ChildImageHistory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/win" />

    <TextView
        android:id="@+id/CoinTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ChildImageHistory"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ChildImageHistory"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/CoinTextView"
        app:layout_constraintStart_toEndOf="@+id/CoinImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/childimg" />
</androidx.constraintlayout.widget.ConstraintLayout>
